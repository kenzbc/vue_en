#pop {
    .el-dialog {
        width 720px
        height 360px
        background transparent
        box-shadow none
        
        .close-btn {
            position absolute
            width 36px
            height 36px
            right 0
            top -46px
            display block
            z-index 5
            color #fff
            cursor pointer
            
            .icon {
                width 36px
                height 36px
            }
        }
        
        .el-dialog__header {
            display none
        }
        
        .background {
            position absolute
            left 0
            right 0
            top 0
            bottom 0
            background-position center
            background-size cover
            background-repeat no-repeat
            
            a {
                display block
                width 100%
                height 100%
            }
        }
    }
}

#login {
    .el-dialog {
        width 480px
        //height 420px
        border-radius 2px
        overflow hidden
        background transparent
        
        .el-dialog__header {
            display none
        }
        
        .el-dialog__body {
            //height 420px
            padding 0
            color #373A41
            
            > div {
                //height 420px
            }
            
            .main {
                width 480px
                padding 20px 50px
                background-color #fff
                
                .tabs {
                    
                    .tab {
                        display inline-block
                        text-align center
                        line-height 24px
                        font-size 18px
                        font-weight bold
                        border-bottom 2px solid #0C9DFC
                        padding 7px 12px
                    }
                }
                
                .form {
                    margin-top 30px
                    margin-bottom 20px
                    
                    .form-input {
                        box-sizing content-box
                        height 60px
                        line-height 60px
                        background-color #fff
                        border-bottom 1px solid #E7EDF1
                        clear both
                        position relative

                        &.area-select-form {
                            width 280px
                        }
                        
                        .icon, input {
                            display block
                            float left
                        }


                        .area-select {
                            .el-input {
                                height 60px
                                width 240px
                            }
                        }

                        .area-number {
                            height 60px
                            line-height 60px
                            width 80px
                            display block
                            text-align right
                            padding-right 10px
                            border-bottom 1px solid #E7EDF1
                            position absolute
                            right -100px
                            top 0
                        }

                        .icon {
                            width 22px
                            height 22px
                            margin 18px 8px
                            vertical-align middle
                            color #A5A8B2
                        }
                        
                        input {
                            width calc(100% - 40px)
                            height 60px
                            border none
                            background none
                            padding 0 10px
                            font-size 14px
                            
                            &::-moz-placeholder {
                                color: #A5A8B2;
                                opacity .5;
                            }
                            &:-ms-input-placeholder {
                                color: #A5A8B2;
                                opacity .5;
                            }
                            &::-webkit-input-placeholder {
                                color: #A5A8B2;
                                opacity .5;
                            }
                        }
                        
                        .code-img {
                            cursor pointer
                            position absolute
                            height 40px
                            right 0
                            top 10px
                            z-index 10
                        }
                    }
                }
                
                .actions {

                    &.third-platform {
                        text-align center
                        padding-top 10px
                        a.button {
                            display inline-block
                            margin 0 8px
                            //margin-left 15px
                        }
                        .button.submit {
                            //width 100px
                            //margin-right 5px
                        }
                    }
                    
                    a.button {
                        display none
                    }

                    .button {
                        width 36px
                        height 36px
                        border none
                        display inline-block
                        vertical-align middle

                        .icon {
                            width 36px
                            height 36px
                            color #DADEE1
                            transition-duration .3s

                            &:hover {
                                &.weibo {
                                    color #f97474
                                }

                                &.qq {
                                    color #6caff5
                                }

                                &.wechat {
                                    color #6dca6d
                                }
                            }
                        }

                        &.submit {
                            width 100%
                            margin-right 0
                            height 50px
                            font-size 16px
                            background-image: linear-gradient(45deg, #0FB3FF 0%, #006AEE 100%);
                            border-radius: 2px;
                            color #fff

                            &:not(.is-disabled):hover {
                                box-shadow: 0 3px 6px 0 rgba(17, 149, 252, 0.30);
                            }
                        }

                        &.is-disabled {
                            color: #bfcbd9;
                            cursor: not-allowed;
                            background-image: none;
                            background-color: #eef1f6;
                            border-color: #d1dbe5;
                        }
                    }

                }
                
                .links {
                    margin-top 10px
                    
                    a {
                        height 20px
                        line-height 20px
                        font-size 14px
                        color #A5A8B2
                        opacity .5
                        transition-duration .3s
                        
                        &:hover {
                            opacity 1
                        }
                        
                    }
                }
            }
            
            //.bg {
            //    cursor pointer
            //    width 360px
            //    background-image url('/static/image/login-right-bg.jpg')
            //    background-size cover
            //    background-position center
            //    background-repeat no-repeat
            //}
        }
    }
    
}

